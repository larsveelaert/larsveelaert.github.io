download arm system -> I choose arch linux

mkdir chroot

wget

tar  xvzf A....



#if you get extended keyword error, ignore it

rm A

proot -0 -r ~/CHROOT -b /dev/ -b /sys/ -b /proc/

rm /etc/resolv.conf

echo "nameserver 8.8.8.8" >> /etc/resolv.conf

add to /etc/group ,'inet:x:3003:root,alarm' AND 'net_raw:x:3004:root'

